<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3 d-flex">
    <a href="/api/produk" class="ml-2 btn btn-danger"><i class="fas fa-file-alt"></i></a>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No</th>
            <th>Nama</th>
            <th>Harga</th>
            <th>Categori</th>
            <th>Toko</th>
            <th>Gambar</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i < produk.length; i++) { %>
            <tr>
              <td> <%= i + 1 %></td>
              <td> <%= produk[i].nama %></td> 
              <td> Rp. <%= produk[i].harga %> </td>
              <td> <%= produk[i].categoriId.jenis %> </td>
              <td> <%= produk[i].tokoId.nama %> </td>
              <td> <img src="<%= produk[i].gambar %>" alt="gambar" width="80px"> </td>
              <td>
                <form action="/produk/<%= produk[i].id %>?_method=DELETE" method="POST">
                  <a href="/produk/edit/<%= produk[i].id %>" class="btn btn-warning btn-circle btn-sm btn-update mr-3" ><i class="fas fa-pen"></i></a>
                  <button type="submit" class="btn btn-danger btn-circle btn-sm"> <i class="fas fa-trash"></i> </button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>