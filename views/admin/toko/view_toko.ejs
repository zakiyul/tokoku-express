<script>
  $('#dataTable').on('click', '.btn-update', function (){
    let id = $(this).data('id');
    let nama = $(this).data('nama');
    let owner = $(this).data('owner');
    let alamat = $(this).data('alamat');
    $('#edit-modal').modal('show');
    $('.taruh-id-disini').val(id);
    $('.taruh-nama-disini').val(nama);
    $('.taruh-owner-disini').val(owner);
    $('.taruh-alamat-disini').val(alamat);
  })
</script>